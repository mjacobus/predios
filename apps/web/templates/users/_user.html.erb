<div class="row">
  <div class="col-sm-6 col-md-6">
    <div class="float-left"><img class="align-self-start mr-3" src="<%= user.avatar_url(72) %>" alt="<%= user.name %>"></div>
    <div class="float-left">
      <div class="float-left">
        <div> <%= user.name %> </div>
        <div><small> <%= user.email %></small> </div>
        <div class=""> <%= render partial: 'partials/user_badges', locals: { user: user } %> </div>
      </div>
    </div>
  </div>
  <div class="col-sm-6 col-md-6">
    <div class="float-right">
      <%= render partial: 'users/actions', locals: { user: user } %>
    </div>
  </div>
</div>
