<% buildings.each do |building| %>
  <div class="row">
    <div class="col-1">
      <strong><%= building.number %></strong>
    </div>
    <div class="col-10">
      <div class="flaot-right">
        <%= render partial: 'partials/icons/user', locals: { size: 16, color: 'black' } %>
        <%= building.number_of_apartments %>
      </div>
      <div> <%= building.address %></div>
      <div> <small> <%= building.neighborhood %></small> </div>
      <div> <small> <%= building.name %></small> </div>
    </div>
    <div class="col-1">
      <div class="float-right">
        <%= render partial: 'buildings/call_options', locals: { building: building, size: 20 } %>
      </div>
    </div>
  </div>
  <hr>
<% end %>
